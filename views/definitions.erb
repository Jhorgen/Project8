<h1>Definitions</h1>

<h2><%= @word.word %></h2>

<% if @definitions.any? %>
  <ul>
    <% @definitions.each do |definition| %>
    <li><a href="/definitions/<%= definition.id %>"><%= definition.definition %> </a></li>
    <% end %>
    </ul>
  <%else%>
    <p>No definitions to display</p>
  <% end %>
